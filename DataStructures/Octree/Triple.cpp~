#include "Triple.h"

Triple::Triple()
{
  _x = 0;
  _y = 0;
  _z = 0;
}

Triple::Triple(double x, double y, double z)
{
  _x = x;
  _y = y;
  _z = z;
}

Triple::Triple(Triple &t)
{
  _x = t.GetX();
  _y = t.GetY();
  _z = t.GetZ();
}

Triple::~Triple(){};

double Triple::GetX()
{
  return _x;
}

double Triple::GetY()
{
  return _y;
}

double Triple::GetZ()
{
  return _z;
}

void Triple::SetX(double x)
{
  _x = x;
}

void Triple::SetY(double y)
{
  _y = y;
}

void Triple::SetZ(double z)
{
  _z = z;
}
