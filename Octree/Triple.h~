#ifndef TRIPLE_H
#define TRIPLE_H

class Triple
{
 public:
  Triple();
  Triple(double x, double y, double z);
  Triple(Triple &t);
  ~Triple();
  
  double GetX();
  double GetY();
  double GetZ();
  void SetX(double x);
  void SetY(double y);
  void SetZ(double z);

 private:
  double _x;
  double _y;
  double _z;
};

#endif
